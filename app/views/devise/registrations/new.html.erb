<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.radio_button(:type, "Novice") %>
    <%= f.label(:type, "Novice") %>
    <%= f.radio_button(:type, "Expert") %>
    <%= f.label(:type, "Expert") %>
  </div>

  <div class="field">
    <%= f.label 'service (only for Experts)' %><br />
    <%= f.text_field :service, autofocus: true, autocomplete: "service" %>
  </div>

  <div class="field">
    <%= f.label 'profession (only for Experts)' %><br />
    <%= f.text_field :profession, autofocus: true, autocomplete: "profession" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div><br />
<% end %>

<%#= render "devise/shared/links" %>

<script>
  $("input[type='check_box']#type").on('change', function(){
    $('#expert-fields').toggle();
  });
</script>
