<div class="container" id="form_container">
  <div class="row">
      <div class="col-md-offset-4 col-md-4">
        <h1><%= form_type %> Campaign</h1><br>
          <%= form_for(@campaign) do |f| %>
          <%= f.text_field :title, id: "title", placeholder: "Title", class: "form-control input-sm chat-input"%><br>
          <%= f.text_field :tags, id: "tags", placeholder: "Comma, Seperated, Tags", class: "form-control input-sm chat-input"%><br>
          <%= f.text_field :estimated_duration, id: "estimated_duration", placeholder: "Estimated duration", class: "form-control input-sm chat-input"%><br>
          <%= f.submit "Submit", class: "btn btn-primary btn-md" %>
          <% end %>
      </div>
    </div>
</div>
